{
  "compilerOptions": {
      "module": "CommonJS",
      "declaration": false,
      "removeComments": true,
      "emitDecoratorMetadata": true,
      "experimentalDecorators": true,
      "allowSyntheticDefaultImports": true,
      "target": "es2017",
      "sourceMap": true,
      "outDir": "./dist",
      "baseUrl": "./",
      "incremental": true,
      "allowJs": true,
      "skipLibCheck": true,
      "paths": {
          "@/modules/*": ["src/modules/*"],
          "@/config/*": ["src/config/*"],
          "@/shared/*": ["src/shared/*"]
      }
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist", "test", "**/*spec.ts"]
}
